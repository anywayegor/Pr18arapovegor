           <Button x:Name="BtnHeal" Text="Вылечиться" WidthRequest="110" IsEnabled="False" Clicked="BtnHeal_Clicked"/>
           <Button x:Name="BtnSuper" Text="Супер-атака" WidthRequest="120" IsEnabled="False" Clicked="BtnSuper_Clicked"/>
           <Button x:Name="BtnNewGame" Text="Новая игра" WidthRequest="110" BackgroundColor="#5A2DF5" TextColor="White" Clicked="BtnNewGame_Clicked"/>
