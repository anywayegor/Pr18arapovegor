           <RowDefinition Height="Auto" />
           <RowDefinition Height="Auto" />
           <RowDefinition Height="*" />
       </Grid.RowDefinitions>
       <Label Grid.Row="0" Text="Бой против монстра" FontSize="22"
              HorizontalOptions="Center" FontAttributes="Bold"/>
