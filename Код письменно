                   <Label Text="Монстр" FontAttributes="Bold" HorizontalOptions="End"/>
                   <Label x:Name="MonsterHpLabel" Text="HP: 80 / 80" FontSize="12" HorizontalOptions="End"/>
                   <ProgressBar x:Name="MonsterHpBar" HeightRequest="6" Progress="1" />
                   <Label Text="Сила: 5-10" FontSize="12" TextColor="Gray" HorizontalOptions="End" />
               </StackLayout>
           </Frame>
